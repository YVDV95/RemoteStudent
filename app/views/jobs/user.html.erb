  <div class="container col-md-10 loopthrough">
    <% @jobs.take(7).each_slice(4) do |jobs| %>
      <div class="row">
        <% jobs.each do |job| %>
          <div class="job col">
            <h5><%= link_to job.title, job %></h5>
            <p><%= job.money %>$/mo</p>
            <p><%= job.hours %></p>
            <p><%= job.where %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>