<div class="container col-md-8">
  <h2 style="margin-top: 80px; text-align: center;">Please enter your username and password.</h2>
	<div class="loginpage">

	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :name, required: true, autofocus: true %>
	    <%= f.input :email, required: true %>
	    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
	    <%= f.input :password_confirmation, required: true %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Sign up", class: "applybutton" %>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
	</div>
</div>